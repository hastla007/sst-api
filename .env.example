# ===================================
# Enterprise STT API v3.0 Configuration
# ===================================

# Whisper Model Configuration
# Options: tiny, base, small, medium, large
# Larger models = better accuracy but slower
WHISPER_MODEL=base

# GPU Support
# Set to "true" to use CUDA acceleration (requires NVIDIA GPU)
USE_GPU=false

# ===================================
# Security & Authentication
# ===================================

# API Keys (comma-separated for multiple keys)
# Leave empty to disable authentication
API_KEYS=your-api-key-1,your-api-key-2

# CORS Origins (comma-separated)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60  # seconds

# ===================================
# Database Configuration (PostgreSQL)
# ===================================

DATABASE_URL=postgresql://stt_user:stt_password@postgres:5432/stt_db

# ===================================
# Redis Configuration
# ===================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)

# ===================================
# Celery Configuration
# ===================================

CELERY_BROKER=redis://redis:6379/1
CELERY_BACKEND=redis://redis:6379/2

# ===================================
# Cloud Storage Configuration
# ===================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET=stt-audio-files
AWS_REGION=us-east-1

# Google Cloud Storage
GCS_BUCKET=stt-audio-files
GCS_CREDENTIALS_FILE=/path/to/credentials.json

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_CONTAINER=stt-audio-files

# ===================================
# Speaker Diarization Configuration
# ===================================

# HuggingFace Token (required for pyannote models)
# Get token from: https://huggingface.co/settings/tokens
# Accept pyannote model license: https://huggingface.co/pyannote/speaker-diarization
HUGGINGFACE_TOKEN=your-huggingface-token

DIARIZATION_MODEL=pyannote/speaker-diarization

# ===================================
# Feature Toggles
# ===================================

# Enable specific features (set to "true" or "false")
ENABLE_DIARIZATION=true
ENABLE_TRANSLATION=true
ENABLE_SENTIMENT=true
ENABLE_CLOUD_STORAGE=true

# ===================================
# File Upload Limits
# ===================================

MAX_FILE_SIZE_MB=100

# ===================================
# Monitoring & Logging
# ===================================

LOG_LEVEL=INFO
ENABLE_METRICS=true

# ===================================
# Development Settings
# ===================================

DEBUG=false
RELOAD=false
