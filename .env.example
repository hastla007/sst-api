# Whisper Model Configuration
# Options: tiny, base, small, medium, large
WHISPER_MODEL=base

# Security Settings
# Comma-separated API keys (leave empty to disable authentication)
API_KEYS=your-api-key-1,your-api-key-2

# CORS Configuration
# Comma-separated origins (use * for all origins)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER=redis://redis:6379/1
CELERY_BACKEND=redis://redis:6379/2

# GPU Support
# Set to "true" to enable GPU acceleration (requires CUDA)
USE_GPU=false
